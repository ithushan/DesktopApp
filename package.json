{
  "name": "my-desktop-app",
  "version": "0.1.0",
  "private": true,
  "description": "My Electron Desktop App",
  "author": "Mithushan",
  "main": "main/main.js",
  "scripts": {
    "dev": "concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others \"next dev\" \"electron .\"",
    "build": " next build && electron-builder",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "next": "15.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "electron-serve": "^1.3.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.2.1"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "electromon": "^1.0.10",
    "electron": "^16.2.8",
    "electron-builder": "^24.13.3",
    "typescript": "^5",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "myDesktopApp",
    "productName": "my-app",
    "buildVersion": "1.10.0",
    "win": {
      "target": "nsis"
    },
    "directories": {
      "output": "dist"
    }
  }
}
